<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:backgroundTint="#F8F5F5"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:onClick="backback2"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:backgroundTint="#522CDC0C"
        android:onClick="tarihTest"
        android:text="Tarih"
        android:textColor="#7C090000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton2" />

    <Button
        android:id="@+id/testButton2"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:backgroundTint="#522CDC0C"
        android:onClick="cografyaTest"
        android:text="CoÄŸrafya"
        android:textColor="#7C090000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testButton" />
</androidx.constraintlayout.widget.ConstraintLayout>