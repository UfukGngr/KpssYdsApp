<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFBABA"
    android:backgroundTint="#A6FAD3D3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/kpssButton"
        android:layout_width="210dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:layout_marginBottom="77dp"
        android:backgroundTint="#EC7C27"
        android:gravity="center"
        android:onClick="kpssStudy"
        android:text="KPSS"
        android:textAlignment="center"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ydsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ydsButton"
        android:layout_width="210dp"
        android:layout_height="102dp"
        android:layout_marginBottom="177dp"
        android:backgroundTint="#CB1341B5"
        android:gravity="center"
        android:onClick="ydsStudy"
        android:text="YDS"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInButton" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="313dp"
        android:backgroundTint="#1C9CE1"
        android:onClick="loginTransfer"
        android:text="Google Sign in"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/ydsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>