<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFBABA"
    android:backgroundTint="#A6FAD3D3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/kpssButton"
        android:layout_width="207dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:backgroundTint="#EC7C27"
        android:gravity="center"
        android:onClick="kpssStudy"
        android:text="KPSS"
        android:textAlignment="center"
        app:cornerRadius="20dp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/ydsButton"
        android:layout_width="211dp"
        android:layout_height="120dp"
        android:backgroundTint="#CB1341B5"
        android:gravity="center"
        android:onClick="ydsStudy"
        android:text="YDS"
        app:cornerRadius="20dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:backgroundTint="#1C9CE1"
        android:onClick="loginTransfer"
        android:text="Sign in"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:backgroundTint="#F44C4C"
        android:onClick="registerTransfer"
        android:text="Sign up"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="16dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="or"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>