<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#A6FAD3D3"
    tools:context=".ProfileActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/profileKpssButton"
        android:layout_width="210dp"
        android:layout_height="102dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#EC7C27"
        android:onClick="kpssStudy"
        android:text="KPSS"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileYdsButton"
        android:layout_width="210dp"
        android:layout_height="102dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#CB1341B5"
        android:onClick="ydsStudy"
        android:text="YDS"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileKpssButton" />

    <ImageButton
        android:id="@+id/profilehomeButton"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:onClick="gohome"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home"
        tools:layout_editor_absoluteY="-7dp" />
</androidx.constraintlayout.widget.ConstraintLayout>